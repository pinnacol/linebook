(program='/bin/sh', options={})
--
#!<%= program %>
<% section %>

usage="usage: %s: [-h]\n"
while getopts "h" opt
do
  case $opt in
  h  )  printf "$usage" $0
        printf "       %s   %s\n" "-h" "prints this help"
        exit 0 ;;
  \? )  printf "$usage" $0
        exit 2 ;;
  esac
done
shift $(($OPTIND - 1))

<% check_status_function %>
<% yield if block_given? %>

<% if options[:info] %>
echo >&2
echo "###############################################################################" >&2
echo "# $(whoami)@$(hostname):$(pwd):$0" >&2

<% end %>
<% section " #{target_name} " %>

