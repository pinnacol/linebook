(user='root', &block)
  target_name = guess_target_name(user)
  path = capture_path(target_name) do
    target.puts "export LINECOOK_PACKAGE_DIR=$(cd $(dirname $0)#{'/..' * (target_name.split('/').length - 1)}; pwd)"
    instance_eval(&block)
  end
